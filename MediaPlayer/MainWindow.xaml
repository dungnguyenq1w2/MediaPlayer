<Window x:Class="MediaPlayer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaPlayer"
        mc:Ignorable="d"
        Title="MediaPlayer" Height="450" Width="900" Loaded="Window_Loaded">
    <Window.Resources>
        <ResourceDictionary Source="CustomSliderAndButtonDictionary.xaml"/>
    </Window.Resources>
    <DockPanel>
        <StackPanel DockPanel.Dock="Top">
            <Menu Background="#555" Foreground="White" Cursor="Hand" FontSize="15">
                <MenuItem Header="File">
                    <MenuItem Header="Open File" Foreground="Black">

                    </MenuItem>
                    <MenuItem Header="Open Folder" Foreground="Black">

                    </MenuItem>
                </MenuItem>
                <MenuItem Header="View">
                    <MenuItem Header="View Playlist" Foreground="Black" Click="ViewPlaylist_Click">

                    </MenuItem>
                    <MenuItem Header="Add to Playlist" Foreground="Black">

                    </MenuItem>
                </MenuItem>
            </Menu>
        </StackPanel>

        <StackPanel DockPanel.Dock="Bottom" Orientation="Horizontal" Background="#333">
            <Button Name="BtnPrevious" Click="BtnPrevious_Click">
                <Image Source="Images/Previous.png" Height="23"/>
            </Button>
            <Button Padding="5" Focusable="False">
                <Image Source="Images/play-button-arrowhead.png" Height="11"/>
            </Button>
            <Button Padding="5" Focusable="False">
                <Image Source="Images/pause.png" Height="11"/>
            </Button>

            <Button Padding="5" Focusable="False">
                <Image Source="Images/stop.png" Height="11"/>
            </Button>
            <Button Name="BtnNext" Click="BtnNext_Click">
                <Image Source="Images/Next.png" Height="23"/>
            </Button>
        </StackPanel>

        <StatusBar Background="#555" DockPanel.Dock="Bottom">
            <StatusBar.ItemsPanel>
                <ItemsPanelTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>
                    </Grid>
                </ItemsPanelTemplate>
            </StatusBar.ItemsPanel>
            <WrapPanel>
                <TextBlock Text="00:00:00" FontSize="16" 
                       Foreground="White" x:Name="txtTime"/>

                <TextBlock Text="/" FontSize="16" 
                           Foreground="White"/>

                <TextBlock Text="00:00:00" FontSize="16" 
                       Foreground="#888" x:Name="txtFullTime"/>
            </WrapPanel>

            <StatusBarItem Grid.Column="1" HorizontalContentAlignment="Stretch">
                <Slider x:Name="sliDuration" Thumb.DragCompleted="SliDuration_DragCompleted"
                            IsMoveToPointEnabled="True"/>
            </StatusBarItem>

            <StatusBarItem Grid.Column="2">
                <Button x:Name="MuteButton">
                    <Image Source="Images/volume.png" Height="17" Width="26"/>
                </Button>
            </StatusBarItem>

            <StatusBarItem Grid.Column="3" HorizontalContentAlignment="Stretch" Width="80">

                <Slider x:Name="sliVolume"
                            Maximum="1" IsMoveToPointEnabled="True"/>

            </StatusBarItem>
            <StatusBarItem Grid.Column="4">
                <WrapPanel>
                    <TextBlock Text="0%" FontSize="16" 
                       Foreground="White" x:Name="txtVolume"/>
                </WrapPanel>
            </StatusBarItem>
        </StatusBar>

        <Grid x:Name="mediaGrid" Background="#333" >
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="385*" />
                <ColumnDefinition Width="184*"/>
            </Grid.ColumnDefinitions>

            <Grid.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="View Playlist" Click="ViewPlaylist_Click"/>
                </ContextMenu>
            </Grid.ContextMenu>

            <StackPanel Grid.Column="0" Visibility="Hidden" Background="Transparent">
                <MediaElement>

                </MediaElement>
            </StackPanel>
            <GridSplitter Width="2" Background="#444">

            </GridSplitter>
            <DockPanel Grid.Column="1">
                <TextBox x:Name="keywordTextBox" Text="{Binding Keyword, UpdateSourceTrigger=PropertyChanged}" TextChanged="keywordTextBox_TextChanged" DockPanel.Dock="Top">
                </TextBox>
                <ListView Background="Transparent" Name="playListView" BorderThickness="0">
                    <ListView.ItemsPanel>
                        <ItemsPanelTemplate>
                            <StackPanel />
                        </ItemsPanelTemplate>
                    </ListView.ItemsPanel>
                    <ListView.ItemTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <Image Width="10" Height="10" Source="Images/play-button-arrowhead.png" Margin="5"/>
                                <TextBlock Margin="5">
                                <Run Text="{Binding Name}" Foreground="White"/>
                                </TextBlock>
                                <TextBlock Margin="5">
                                <Run Text="{Binding totalTime}" Foreground="White"/>
                                <Run Text="/" Foreground="White"/>
                                <Run Text="{Binding currentPlayedTime}" Foreground="Gray"/>
                                </TextBlock>
                            </StackPanel>
                        </DataTemplate>
                    </ListView.ItemTemplate>
                </ListView>
            </DockPanel>
        </Grid>
    </DockPanel>
</Window>
